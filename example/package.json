{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "yon build:bitcoinjs && yon rollup -c",
    "build:bitcoinjs": "browserify -r bitcoinjs-lib -s BitcoinJS | terser --compress --mangle > public/bitcoinjs.min.js",
    "dev": "yon build:bitcoinjs && yon rollup -c -w",
    "start": "sirv public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "browserify": "^16.5.1",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "yarn-or-npm": "^3.0.1"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
